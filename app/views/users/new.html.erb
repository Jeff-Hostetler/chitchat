<div class="center-container">
  <h1>Sign up</h1>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <br>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>

    <div>
      <%= f.label :password_confirmation, 'Confirm Password' %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>

    <%= f.submit 'Sign Up' %>
  <% end %>
</div>