<div class="center-container">
  <h1>Sign In</h1>

  <%= form_for(:session, url: signin_path) do |f| %>
    <% if @login_error %>
      <div>
        <li><%= @login_error %></li>
      </div>
    <% end %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <br>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <br>

    <%= f.submit 'Sign Up' %>
  <% end %>
</div>